</style>

@code {
    private BookFormModel newBook = new();
    private bool isSaving = false;
    private bool isProcessing = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool shouldAddAnother = false;
    private int currentStep = 1;
    private List<IBrowserFile> selectedFiles = new();
    private bool extractedFromImages = false;

    protected override void OnInitialized()
    {
        newBook.Status = BookStatus.Keep;
    }

    private void HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFiles.Clear();
        var files = e.GetMultipleFiles(3);
        selectedFiles.AddRange(files);
    }

    private async Task ProcessImages()
    {
        if (!selectedFiles.Any()) return;

        isProcessing = true;
        errorMessage = string.Empty;

        try
        {
            var imageStreams = new List<Stream>();

            foreach (var file in selectedFiles)
            {
                var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10 MB max
                imageStreams.Add(stream);
            }

            var result = await ExtractionService.ExtractBookInfoFromImagesAsync(imageStreams);

            // Cerrar streams
            foreach (var stream in imageStreams)
            {
                await stream.DisposeAsync();
            }

            if (!result.IsBook)
            {
                errorMessage = "No se pudo detectar información de un libro en las imágenes. Por favor, intenta con otras fotos o carga los datos manualmente.";
                return;
            }

            // Mapear resultado a formulario
            newBook.Title = result.Title ?? string.Empty;
            newBook.Authors = result.Authors.Any() ? string.Join(", ", result.Authors) : string.Empty;
            newBook.PublicationYear = result.PublicationYear;
            newBook.Isbn13 = result.Isbn13;
            newBook.Publisher = result.Publisher;
            newBook.Language = result.Language;
            newBook.Format = result.Format;
            newBook.Confidence = result.Confidence;

            extractedFromImages = true;
            currentStep = 2;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al procesar imágenes: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void ShowManualForm()
    {
        currentStep = 2;
        extractedFromImages = false;
    }

    private void BackToUpload()
    {
        currentStep = 1;
        newBook = new BookFormModel { Status = BookStatus.Keep };
        selectedFiles.Clear();
        extractedFromImages = false;
    }

    private async Task HandleSaveBook()
    {
        await SaveBook(shouldAddAnother);
    }

    private async Task SaveAndAddAnother()
    {
        shouldAddAnother = true;
        await SaveBook(true);
    }

    private async Task SaveBook(bool addAnother)
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(newBook.Title))
        {
            errorMessage = "El título es obligatorio.";
            return;
        }

        if (string.IsNullOrWhiteSpace(newBook.Authors))
        {
            errorMessage = "El autor es obligatorio.";
            return;
        }

        isSaving = true;

        try
        {
            var book = new Book
            {
                Title = newBook.Title.Trim(),
                Authors = newBook.Authors.Trim(),
                PublicationYear = newBook.PublicationYear,
                Isbn13 = newBook.Isbn13?.Trim(),
                Publisher = newBook.Publisher?.Trim(),
                Language = newBook.Language?.Trim(),
                Format = newBook.Format?.Trim(),
                Status = newBook.Status,
                Confidence = newBook.Confidence
            };

            await BookService.CreateBookAsync(book);

            if (addAnother)
            {
                successMessage = "Libro guardado exitosamente. Puedes agregar otro.";
                newBook = new BookFormModel { Status = BookStatus.Keep };
                currentStep = 1;
                selectedFiles.Clear();
                extractedFromImages = false;
                shouldAddAnother = false;
            }
            else
            {
                Navigation.NavigateTo("/biblioteca");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar el libro: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CancelAdd()
    {
        Navigation.NavigateTo("/biblioteca");
    }

    private class BookFormModel
    {
        [Required(ErrorMessage = "El título es obligatorio")]
        public string Title { get; set; } = string.Empty;

        [Required(ErrorMessage = "El autor es obligatorio")]
        public string Authors { get; set; } = string.Empty;

        public int? PublicationYear { get; set; }

        public string? Isbn13 { get; set; }

        public string? Publisher { get; set; }

        public string? Language { get; set; }

        public string? Format { get; set; }

        public BookStatus Status { get; set; } = BookStatus.Keep;

        public decimal Confidence { get; set; } = 1.0m;
    }
}