@page "/agregar"
@rendermode InteractiveServer
@inject IBookService BookService
@inject IBookExtractionService ExtractionService
@inject NavigationManager Navigation
@using System.ComponentModel.DataAnnotations

<PageTitle>Agregar Libro</PageTitle>

<div class="agregar-container">
    <h1>📚 Agregar Libro</h1>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success" role="alert">
            @successMessage
        </div>
    }

    @if (currentStep == 1)
    {
        <div class="form-card">
            <h2>Opción 1: Subir fotos del libro</h2>
            <p>Sube fotos de la tapa, contratapa o página legal (hasta 3 imágenes)</p>

            <div class="upload-area">
                <InputFile OnChange="HandleFileSelection" multiple accept="image/*" class="file-input" />
                <div class="upload-prompt">
                    📸 Click para seleccionar imágenes
                </div>
            </div>

            @if (selectedFiles.Any())
            {
                <div class="selected-files">
                    <h3>Imágenes seleccionadas:</h3>
                    <ul>
                        @foreach (var file in selectedFiles)
                        {
                            <li>@file.Name</li>
                        }
                    </ul>
                </div>
            }

            <div class="button-group mt-4">
                <button type="button" class="btn btn-secondary" @onclick="CancelAdd">
                    Cancelar
                </button>
                <button type="button" class="btn btn-info" @onclick="ShowManualForm">
                    Cargar manualmente
                </button>
                <button type="button" class="btn btn-primary" @onclick="ProcessImages"
                    disabled="@(!selectedFiles.Any() || isProcessing)">
                    @(isProcessing ? "Procesando..." : "Extraer información →")
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="form-card">
            <h2>Información del libro</h2>

            @if (extractedFromImages)
            {
                <div class="alert alert-info">
                    ℹ️ Información extraída de las imágenes. Revisa y corrige si es necesario.
                </div>
            }

            <EditForm Model="newBook" OnValidSubmit="HandleSaveBook">
                <DataAnnotationsValidator />

                <div class="form-group mb-3">
                    <label class="form-label">Título *</label>
                    <InputText @bind-Value="newBook.Title" class="form-control" placeholder="Título del libro" />
                    <ValidationMessage For="@(() => newBook.Title)" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Autor(es) *</label>
                    <InputText @bind-Value="newBook.Authors" class="form-control" placeholder="Nombre del autor" />
                    <ValidationMessage For="@(() => newBook.Authors)" class="text-danger" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Año de Publicación</label>
                    <InputNumber TValue="int?" @bind-Value="newBook.PublicationYear" class="form-control"
                        placeholder="2024" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">ISBN-13</label>
                    <InputText @bind-Value="newBook.Isbn13" class="form-control" placeholder="978-XXX-XXX-XXX-X" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Editorial</label>
                    <InputText @bind-Value="newBook.Publisher" class="form-control" placeholder="Editorial" />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Idioma</label>
                    <InputText @bind-Value="newBook.Language" class="form-control" placeholder="ES, EN, etc." />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Formato</label>
                    <InputText @bind-Value="newBook.Format" class="form-control" placeholder="Tapa blanda, ebook, etc." />
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Estado</label>
                    <InputSelect TValue="BookStatus" @bind-Value="newBook.Status" class="form-control">
                        <option value="@BookStatus.Keep">Conservar</option>
                        <option value="@BookStatus.Sell">Vender</option>
                        <option value="@BookStatus.Swap">Intercambiar</option>
                    </InputSelect>
                </div>

                <div class="button-group mt-4">
                    <button type="button" class="btn btn-secondary" @onclick="BackToUpload">
                        ← Volver
                    </button>
                    <button type="submit" class="btn btn-success" disabled="@isSaving">
                        @(isSaving ? "Guardando..." : "💾 Guardar")
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="SaveAndAddAnother" disabled="@isSaving">
                        @(isSaving ? "Guardando..." : "💾 Guardar y agregar otro")
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

<style>
